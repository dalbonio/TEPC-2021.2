        <section class="main elevated1">
            <form action={{route('/api/editProposal')}} method="POST">
                <h1>Cadastrar Proposta de Trabalho</h1>
                <p class="paragraph1 low-emph">
                    Preencha todos os campos obrigatórios e clique "Enviar".
                </p>

                <hr>
                <fieldset>
                    <label for="input">Título</label>
                    <input type="textarea" name="title" id="input" placeholder="Insira o título" value="{{proposal.title}}">
                </fieldset>
                
                <fieldset>
                    <label for="research_area">Área de Pesquisa</label>
                    <select name="research_area" id="research_area" placeholder="Selecione a área de pesquisa">
                        @each(item in researchAreas)
                            @if(item.id === proposal.research_area_id)
                                <option value={{item.id}} selected>{{item.name}}</option>
                            @else
                                <option value={{item.id}}>{{item.name}}</option>
                            @endif
                        @endeach
                    </select>
                </fieldset>
    
                <input type="hidden" id="id" name="id" value="{{proposal.id}}">
                <input type="hidden" id="professor" name="professor" value="{{auth.user.name}}">
    
                <fieldset>
                    <label for="area">Descrição</label>
                    <input type="textarea" name="descricao" id="area" placeholder="Insira aqui a descrição" value="{{proposal.description}}">
                </fieldset>
    
                <div class="enviarForm">
                    <button type="submit" class="raised">Enviar</button>
                </div>
            </form>
        </section>
